<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#17171C"
            android:gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#17171C"
                android:gravity="center">

            <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:background="#D6B973"
                    android:foreground="@drawable/logo"
                    tools:ignore="ContentDescription,MissingConstraints,PxUsage"/>

            <TextView
                    android:id="@+id/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C-SHARK"
                    android:textSize="30dp"
                    android:fontFamily="@font/ubuntu"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    tools:ignore="HardcodedText,SpUsage"/>
            <TextView
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Space Cyber Company"
                    android:textSize="25dp"
                    android:fontFamily="@font/century"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    tools:ignore="HardcodedText,SpUsage,TextSizeCheck"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:orientation="vertical"
                android:background="#17171C"
                android:gravity="bottom"
                tools:ignore="RtlHardcoded">

            <TextView
                    android:id="@+id/version_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Version 2025.01.01 Mobile"
                    android:textSize="10dp"
                    android:fontFamily="@font/consola"
                    android:textAlignment="textEnd"
                    android:textColor="#8080FF"
                    tools:ignore="HardcodedText,RtlCompat,SpUsage,TextSizeCheck"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>